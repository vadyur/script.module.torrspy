<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.service.torrspy" name="TorrSpy" version="0.2.3" provider-name="-=Vd=-">

  <requires>
    <import addon="xbmc.python" version="2.26.0"/>
    <import addon="script.module.torrserver"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.vd-common"/>
    <import addon="plugin.video.torrserve-next"/>
    <import addon="script.module.vsdbg" optional="true"/>
  </requires>

  <extension point="xbmc.service" library="service.py"/>
  <extension point="xbmc.python.script" library="script.py">
    <provides>executable</provides>
  </extension>

  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="ru">Сервис TorrSpy</summary>
    <description lang="ru">Плагин предназначен для получения и отображении метаинформации о проигрываемом фильме/сериале запущенном в Kodi извне через TorrServer. Также данный аддон позволяет сохранить недосмотренный фильм/сериал в медиатеку Kodi.</description>
    <forum>http://xbmc.ru/forum/showthread.php?t=23669</forum>
    <source>https://github.com/vadyur/script.service.torrspy</source>
    <assets>
        <icon>resources/icon.png</icon>
    </assets>
  </extension>
  
  

</addon>

