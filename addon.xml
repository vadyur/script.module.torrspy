<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.service.torrspy" name="TorrSpy" version="0.0.2" provider-name="-=Vd=-">

  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="script.module.torrserver"/>
    <import addon="script.module.requests"/>
    <import addon="script.module.vd-common"/>
    <import addon="script.module.vsdbg" optional="true"/>
  </requires>

  <extension point="xbmc.service" library="src/service.py"/>
  <extension point="xbmc.python.script" library="src/script.py">
    <provides>executable</provides>
  </extension>

  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="ru">TorrSpy</summary>
    <description lang="ru">TorrSpy</description>
    
    <assets>
        <icon>resources/icon.png</icon>
    </assets>
  </extension>
  
  

</addon>

